{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "composite": true
  },
  "exclude": [
    "src/**/*.spec.tsx",
    "src/**/*.tsx",
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.scss"],
  "files": [
    "src/index.ts"
  ],
}
